<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
						   http://www.springframework.org/schema/beans/spring-beans.xsd">
						   
	<bean id="index" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="html/index.html"/>
	</bean>
	
	<bean id="loginform" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="html/login.html"/>
	</bean>
	
	<bean id="registrationform" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="html/registration.html"/>
	</bean>
</beans>